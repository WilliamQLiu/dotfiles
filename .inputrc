# Use Vi, not Emacs, style editing
set editing-mode vi

# Ignore case
set completion-ignore-case on

# On menu-complete, first display the common prefix, then cycle through the
# options when hitting tab
menu-complete-display-prefix on

# Remap ESC to use my double 'i' keypress to toggle insert or movement mode.
$if mode=vi
    set keymap vi-command
    "zz": vi-insertion-mode
    set keymap vi-insert
    "zz": vi-movement-mode
$endif

# Keymaps for when we're in command mode (e.g. after hitting ESC)
set keymap vi-command

# Keymaps for when we're in insert mode (i.e., typing stuff in)
set keymap vi-insert

# Needed because binding 'p' in command mode above wipes its insert mode
# function, too. This fixes that, and will insert 'p' when you type 'p'.
"p": self-insert

# Two escapes clear command line.
"\e\e": "\C-a\C-k"

# Remove terminal echoing out ^C after Ctrl+C is pressed
set echo-control-characters off


# Prefix your prompt with + while in insert-mode and : while in command mode
set show-mode-in-prompt on
set vi-ins-mode-string "+"
set vi-cmd-mode-string ":"

